<!-- MAIN CONTENT GOES HERE -->
            <main class="mx-4 mb-5 lg:w-2/4 w-full">

                <form action="/student/add_entry/<%=form_id%>" method="POST" class="bg-white shadow-xl rounded-xl p-2 mb-4">

                    <p class="mt-2 text-base">Household Individual personal info</p>
                    <!-- Entry info -->
                    <div class="pr-5 mb-5">
                        <div class="flex flex-wrap mt-4 text-sm lg:space-x-2  w-full my-2">
                            <input class="border border-slate-300 flex-1 rounded-md py-2 pl-3 mt-2  shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 sm:text-sm" type="text" name="given_id" placeholder="Individual's ID" >
                            <select name="relationship" class="border border-slate-300 flex-1 rounded-md py-2 pl-3 mt-2 shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 sm:text-sm">
                                <option selected default disabled required>Choose Relationship...</option>
                                <option value="mother">Mother</option>
                                <option value="father">Father</option>
                                <option value="Daughter">Daughter</option>
                                <option value="son">Son</option>
                                <option value="relative">Relative</option>
                                <option value="friend">Friend</option>
                                <option value="other">Other</option>
                                <option value="N/A">N/A</option>

                            </select>
                        </div>

                        <div class="flex flex-wrap mt-4 text-sm lg:space-x-2  w-full my-2">
                            <input class="border border-slate-300 flex-1 rounded-md py-2 pl-3 mt-2  shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 sm:text-sm" type="text" name="firstname" placeholder="Firstname" >
                            <input class="border border-slate-300 flex-1 rounded-md py-2 pl-3 mt-2 shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 sm:text-sm" type="text" name="lastname" placeholder="Lastname" >
                        </div>

                        <div class="flex flex-wrap mt-4 text-sm lg:space-x-2  w-full my-2">
                            <input class="border border-slate-300 flex-1 rounded-md py-2 pl-3 mt-2  shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 sm:text-sm" type="text" name="household" placeholder="House Number/Info/Address" >
                            <select name="gender" class="border border-slate-300 flex-1 rounded-md py-2 pl-3 mt-2 shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 sm:text-sm">
                                <option selected default disabled required>Choose Gender...</option>
                                <option value="mother">Male</option>
                                <option value="mother">Female</option>
                                <option value="mother">Other</option>

                            </select>
                          </div>

                        <!-- <textarea class="w-full h-36 border border-slate-300 rounded-md py-2 pl-3 mt-2  shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 sm:text-sm"  name="description" placeholder="Description" ></textarea> -->
                                
                       <input class="px-5 py-2 mt-2 bg-blue-900 hover:bg-blue-700 text-sm text-white rounded-md" type="submit" value="Create Entry"/>
                    </div>
                    </form>


                <div class="space-y-4 lg:w-full w-11/12">
                    <p class="font-normal">All Entries</p>
                    <%entries.reverse().forEach((value)=>{%>
                        <!--SINGLE ENTRY ITEM -->
