    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;400;700&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>NutriCo-</title>
</head>
<body style="font-family: 'Roboto', sans-serif;" class="bg-gray-100 relative">
    <div class="relative min-h-screen md:flex">
        <!-- mobile menu bar -->
        <div class="md:hidden flex justify-between  border-l-8 border-blue-600  bg-white  text-white">
              <!-- logo -->
              <a class="" href="/">
                <img class="h-24 bg-white p-2 m-3 rounded-b-3xl mb-0" src="/public/images/logo.png" alt="">
            </a>

            <div class="flex">
                <!-- menu button -->
                <button class="focus:outline-none border border-white focus:border-blue-600 mobile-menu-button">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 self-center text-blue-600 m-2 " fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                      </svg>
                </button>
            </div> 
        </div> 
        <!-- sidebar -->
        <div class="sidebar bg-white pt-4 text-blue-100 w-64 absolute md:relative inset-y-0 left-0 transform -translate-x-full md:translate-x-0 transition duration-300 ease-in-out">
           <!-- logo -->
           <a class="font-bold text-3xl text-blue-800 pt-4 pl-4" href="/">
            NutriCo
        </a> 
            <!-- nav -->
            <nav class="mt-5 text-black">
                
                <a href="/student/dashboard" class="flex mt-2 py-2 px-5 rounded-md mx-2 hover:text-white hover:bg-blue-900 transition duration-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                      </svg>
                    <span class="px-4">Dashboard</span></a>
                <hr class="mx-5">
                <a href="/student/add" class="flex mt-2 py-2 px-5 rounded-md mx-2 hover:text-white hover:bg-blue-900 transition duration-400">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
  <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v6m3-3H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
</svg>

                      <span class="px-4">Add Form</span></a>
                <hr class="mx-5">
              
                <a href="/student/forms" class="flex mt-2 py-2 px-5 rounded-md mx-2 text-white bg-blue-900 transition duration-400">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
  <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v6m3-3H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
</svg>

                      <span class="px-4">My Forms</span></a>
                <hr class="mx-5">
              
                
               
                <a href="/student/notification" class="flex mt-2 py-2 px-5 rounded-md mx-2 hover:text-white hover:bg-blue-900 transition duration-400 ">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                  </svg>
                      <span class="px-4 flex-1">Notification</span>
                 
                    </a>                 
                <hr class="mx-5">
                <a href="/student/support" class="flex mt-2 py-2 px-5 rounded-md mx-2 hover:text-white hover:bg-blue-900 transition duration-400 ">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                        <span class="px-4 flex-1">Support</span>
                      </a>
                <hr class="mx-5">
                <a href="/student/settings" class="flex mt-2 py-2 px-5 rounded-md mx-2 hover:text-white hover:bg-blue-900 transition duration-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      </svg>
                      <span class="px-4"> Settings</span>
                </a>
                <hr class="mx-5">
                <a href="/student/login" class="py-2 mt-2 px-5 flex rounded-md mx-2 hover:text-white hover:bg-blue-900 transition duration-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
                      </svg> 
                    <span class="px-4">Logout</span>
                </a>
                <hr class="mx-5">
            </nav>
        </div>
         
        <div class="flex-1 pt-3 text-2xl font-bold">
            <div class=" py-4 px-5 flex justify-start">
                <p class="font-normal">Add Data <!-- - ID:001 - John Doe--></p>
                
            </div>

<!-- MAIN CONTENT GOES HERE -->
            <main class="mx-4 mb-5 lg:w-2/4 w-full">

                <form action="/student/add_data/<%=entry_id%>" method="POST" class="bg-white shadow-xl rounded-xl p-2 mb-4">

                    <p class="mt-2 text-base">Dietary Recall  <!--<span class="uppercase">John Doe</span> --></p>
                    <!-- Entry info -->
                    <div class="pr-5 mb-5">
                        <div class="flex flex-wrap mt-4 text-sm lg:space-x-2  w-full my-2">
                           <select name="period" class="border border-slate-300 flex-1 rounded-md py-2 pl-3 mt-2 shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 sm:text-sm">
                                <option selected default disabled required>Choose Time of Day...</option>
                                <option value="Morning">Morning</option>
                                <option value="Afternoon">Afternoon</option>
                                <option value="Evening">Evening</option>
                                <option value="Other">Other</option>
                            </select>
                            <input class="border border-slate-300 flex-1 rounded-md py-2 pl-3 mt-2  shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 sm:text-sm" type="text" name="item" placeholder="Food Item" >
                            
                        </div>

                        <div class="flex flex-wrap mt-4 text-sm lg:space-x-2  w-full my-2">
                            <input class="border border-slate-300 flex-1 rounded-md py-2 pl-3 mt-2  shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 sm:text-sm" type="text" name="weight" placeholder="Weight(grams)" >
                            <input class="border border-slate-300 flex-1 rounded-md py-2 pl-3 mt-2 shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 sm:text-sm" type="text" name="given_time" placeholder="Time eg. 2:00 am" >
                        </div>


                        <!-- <textarea class="w-full h-36 border border-slate-300 rounded-md py-2 pl-3 mt-2  shadow-sm focus:outline-none focus:border-sky-500 focus:ring-sky-500 focus:ring-1 sm:text-sm"  name="description" placeholder="Description" ></textarea> -->
                                
                       <input class="px-5 py-2 mt-2 bg-blue-900 hover:bg-blue-700 text-sm text-white rounded-md" type="submit" value="Add data"/>
                    </div>
                    </form>


                <div class="space-y-4 lg:w-full w-11/12">
                    <div class="flex justify-between font-normal text-base px-1 border-b border-blue-600 p-1">
                        <p class="font-normal text-lg pt-1">Entry Data</p>
                        <a href="/student/convert/<%=entry_id%>" class="bg-blue-800 text-white hover:bg-blue-600 rounded-xl px-2 py-1">Convert</a>
                    </div>
                    <div id="referral" class=" overflow-x-auto mt-10 font-normal shadow-xl rounded-2xl border ">
                        <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                            <thead class="text-xs text-blue-900 uppercase bg-blue-50 dark:bg-gray-700 dark:text-gray-400">
                                <tr>
                                    <th scope="col" class="px-6 py-3">
                                        Food Item
                                    </th>
                                    <th scope="col" class="px-6 py-3">
                                        Weight
                                    </th>
                                    <th scope="col" class="px-6 py-3">
                                        Period
                                    </th>
                                    <th scope="col" class="px-6 py-3">
                                        Time
                                    </th>
                                   
                                </tr>
                            </thead>
                            <tbody>
                                
                                <%data.forEach((value)=>{%>
                                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                                        <th scope="row" class="px-6 py-4 font-medium text-gray-900 dark:text-white whitespace-nowrap">
                                           <%=value.item%>
                                        </th>
                                        <td class="px-6 py-4">
                                            <%=value.weight%>
                                        </td>
                                        <td class="px-6 py-4">
                                            <%=value.period%>
                                        </td>
                                        <td class="px-6 py-4">
                                            <%=value.given_time%>
                                        </td>
                                    </tr>
                               <% })%>
                               
                            </tbody>
                        </table>
                </div>
                </div>
                
              </main>       
<!-- END MAIN CONTENT GOES HERE -->


        
        </div>
    </div>
    
    <footer class="py-5 text-sm bg-white shadow-lg border-b-8 border-blue-900">
        <div class="text-center font-medium ">
            <p>&copy; 2022 NutriCo LTD. </p>
            <p>All rights reserved | Product of <a class="text-blue-800 hover:underline" href="#">NutriCo Ltd</a></p>
        </div>
    </footer>

    <script src="../public/js/index.min.js"></script>
    <script src="../public/js/nav.js"></script>
    <script>
        let upload = document.querySelector('#upload');
        let btn_display = document.querySelector('#btn_display');
 
        upload.addEventListener('change', (e)=>{ 
            btn_display.innerHTML = `
                      <input class="px-3 py-2 mt-2 bg-blue-900 hover:bg-blue-700 text-sm text-white rounded-md" type="submit" value="Change image"/>
                      `
        })
    </script>
</body>
</html>